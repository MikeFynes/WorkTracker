<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lividpansy.worktracker.DetailActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/det_date"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        />

    <TextView  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/det_date"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"

        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/det_start"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
         />
        <TextView  android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/det_start"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/det_end"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            />
        <TextView  android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/det_end"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/det_total"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            />
        <TextView  android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/det_total"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            />

    </LinearLayout>



</LinearLayout>
